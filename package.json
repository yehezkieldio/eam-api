{
    "name": "eam-api",
    "version": "1.0.0",
    "module": "src/main.ts",
    "type": "module",
    "scripts": {
        "start": "bun run .",
        "start:dev": "bun run --hot .",
        "start:docker-test": "docker run --name eam-api --network host -e PORT=3000 -p 3000:3000 eam-api",
        "db:generate": "bunx prisma generate",
        "compose:dev": "docker compose -f docker-compose.dev.yml up -d",
        "docker:build": "docker build --build-arg GIT_COMMIT=$(git rev-parse --short=10 HEAD) --build-arg BUILD_DATE=$(date -u +'%Y-%m-%dT%H:%M:%SZ') -t eam-api:latest .",
        "biome": "biome check .",
        "biome:fix": "biome check . --write"
    },
    "dependencies": {
        "@elysiajs/swagger": "^1.2.0",
        "@prisma/client": "^6.2.1",
        "consola": "^3.4.0",
        "elysia": "^1.2.10",
        "openapi-types": "^12.1.3",
        "type-fest": "^4.33.0"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@types/bun": "1.2.0",
        "@types/node": "^22.10.10",
        "prisma": "^6.2.1",
        "ultracite": "^4.1.16"
    },
    "peerDependencies": {
        "typescript": "^5.7.3"
    }
}
